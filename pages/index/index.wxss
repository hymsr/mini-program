/**index.wxss**/
.tabbar {
  position: fixed;
  height: 120rpx;
  bottom: 0;
  width: 100%;
  left: 0;
  right: 0;
}

.head-card {
  position: relative;
  display: flex;
  align-items: center;
  background-color: rgb(10, 153, 219);
  height: 180rpx;
  width: 100%;
}

.side-card {
  position: absolute;
  left: 0 rpx;
  background-color: #fff;
  width: 150rpx;
  height: 100%;
  z-index: -1;
}

.user_name {
  position: absolute;
  left: 50rpx;
  color: #000;
}

.login {
  position: absolute;
  left: 20rpx;
  color: #333;
  background-color: transparent;
  /*按钮透明*/
  border: none;
  /*设置按钮边框*/
}

.login:active {
  color: #000;
}

.title_img {
  position: absolute;
  right: 20rpx;
}

.entry-list {
  position: relative;
  margin-top: 30rpx;
}

.entry-list>view {
  position: relative;
  margin-top: 30rpx;
}

.search-input {
	border-color: #000;
	border-style: solid;
	border-width: 1px;
	display: flex;
	flex-direction: row;
	align-items: center;
	border-radius: 4%;
}

.classList {
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
}

.classItem {
  width: 100%;
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin-top: 4rpx;
  background-color: #e0e0e0;
}

.is-selected {
  background-color: #eeeeee;
}
.btn {
  display: flex;
  justify-content: center;
}